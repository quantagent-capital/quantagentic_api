{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: Railway Local (Full Stack)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug/railway_local.py",
            "console": "internalConsole",
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONNOUSERSITE": "1",
                "PORT": "8000",
                "LANGCHAIN_TRACING_V2": "false",
                "LANGCHAIN_ENDPOINT": "",
                "LANGCHAIN_API_KEY": "",
                "LANGCHAIN_PROJECT": "",
                "LOG_LEVEL": "INFO",
                "PYTHONDEBUG": "1"
            },
            // Note: Both Celery (with --pool=solo) and Hypercorn run in the main process.
            // All breakpoints work without switching between subprocess IDs.
        },
        {
            "name": "Debug: Disaster Polling Task (Direct)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug/task_direct.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONNOUSERSITE": "1",
                "LANGCHAIN_TRACING_V2": "false",
                "LANGCHAIN_ENDPOINT": "",
                "LANGCHAIN_API_KEY": "",
                "LANGCHAIN_PROJECT": ""
            }
        },
        {
            "name": "Debug: FastAPI Server",
            "type": "python",
            "request": "launch",
            "module": "hypercorn",
            "args": [
                "main:app",
                "--reload",
                "--bind",
                "0.0.0.0:8000"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "python": "${workspaceFolder}/venv/bin/python3"
        }
    ]
}

