{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: Disaster Polling Task (Direct)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug/task_direct.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONNOUSERSITE": "1",
                "LANGCHAIN_TRACING_V2": "false",
                "LANGCHAIN_ENDPOINT": "",
                "LANGCHAIN_API_KEY": "",
                "LANGCHAIN_PROJECT": ""
            }
        },
        {
            "name": "Debug: FastAPI Server",
            "type": "python",
            "request": "launch",
            "module": "hypercorn",
            "args": [
                "main:app",
                "--reload",
                "--bind",
                "0.0.0.0:8000"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "python": "${workspaceFolder}/venv/bin/python3"
        },
        {
            "name": "Debug: Celery Worker with Auto Task",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug/celery_with_task.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/bin/python3",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONNOUSERSITE": "1",
                "LANGCHAIN_TRACING_V2": "false",
                "LANGCHAIN_ENDPOINT": "",
                "LANGCHAIN_API_KEY": "",
                "LANGCHAIN_PROJECT": ""
            }
        }
    ]
}

